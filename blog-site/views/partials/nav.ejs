<!-- Partial component to display navigation bar -->
<%# Source: https://daisyui.com/components/navbar/ %>
<nav class="navbar bg-neutral text-neutral-content sticky top-0 z-50">
  <% if (user && user.user_id == blogDetails.authorId) { %>
  <!-- Check if the user is the author of the blog -->
  <div class="navbar-start">
    <!-- Display author specific links -->
    <a href="/authorHome" class="btn btn-ghost">Author Home</a>
    <a href="/blogs/create" class="btn btn-accent">Create New Draft</a>
    <a href="/authorSettings" class="btn btn-ghost">Settings</a>
  </div>
  <% } else { %>
  <!-- Display reader specific links -->
  <div class="navbar-start">
    <a href="/readerHome" class="btn btn-ghost">Reader Home</a>
  </div>
  <% } %>

  <!-- Display website name set by author -->
  <div class="navbar-center">
    <a href="/" class="btn btn-ghost text-xl"> <%= blogDetails.title %></a>
  </div>
  <div class="navbar-end">
    <% if (user) { %>
    <!-- Check if the user is logged in -->
    <form action="/logout?_method=DELETE" method="POST" style="display: inline">
      <!-- Display logout button -->
      <button type="submit" class="btn btn-default">Logout</button>
    </form>
    <% } else { %>
    <!-- Display login button if the user is already logged in -->
    <a href="/users/login" class="btn btn-primary">Login</a>
    <% } %>
  </div>
</nav>